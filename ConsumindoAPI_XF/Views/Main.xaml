<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ConsumindoAPI_XF.ViewModels"
             mc:Ignorable="d"
             x:Class="ConsumindoAPI_XF.Views.Main">
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    <RefreshView
        RefreshColor="{DynamicResource PrimaryColor}"
        Command="{Binding RefreshList_Command}"
        IsRefreshing="{Binding IsRefreshing}">
        <CollectionView
            SelectionMode="Single"
            ItemsSource="{Binding Alunos}"
            SelectedItem="{Binding Item_Selected}"
            SelectionChangedCommand="{Binding ItemSelectedChanged_Command}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        ColumnSpacing="8"
                        BackgroundColor="White"
                        Padding="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Id}"
                               TextColor="{DynamicResource PrimaryColor}"
                               FontAttributes="Bold"
                               VerticalOptions="CenterAndExpand"
                               FontSize="Large"
                               Grid.Row="0"
                               Grid.RowSpan="2"
                               Grid.Column="0"/>
                        <Label 
                            TextColor="{DynamicResource PrimaryColor}"
                            HorizontalOptions="CenterAndExpand"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            Grid.Row="0"
                            Grid.Column="1">
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="{Binding Nome}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Sobrenome}"/>
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label 
                            TextColor="{DynamicResource PrimaryColor}"
                            Text="{Binding Turma, StringFormat='Turma: {0}'}"
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalOptions="CenterAndExpand"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label 
                    TextColor="{DynamicResource PrimaryColor}"
                    Text="Nenhum aluno encontrado" 
                    FontSize="Large"
                    VerticalTextAlignment="Center"
                    VerticalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    HorizontalOptions="FillAndExpand"/>
            </CollectionView.EmptyView>
        </CollectionView>
    </RefreshView>
</ContentPage>